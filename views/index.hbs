<form action="/" method="POST" class="validated-form" novalidate>
  <div class="container w-25 text-center">
    <div class="my-5">
      <input type="text" class="form-control" id="urlInput" name="inputUrl" placeholder="put URL here"
        aria-describedby="url-input" required>
      <div class="invalid-feedback">
        Please put a valid URL.
      </div>
    </div>
    <button type="submit" class="btn btn-primary rounded-pill">Submit</button>
  </div>
</form>

<script>
  (function () {
    const forms = document.querySelectorAll('.validated-form')

    Array.from(forms)
      .forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        }, false)
      })
  })()
</script>